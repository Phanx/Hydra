<Bindings>
	<Binding name="HYDRA_FOLLOW_TARGET" header="HYDRA">
		if UnitIsPlayer("target") and UnitIsFriend("player", "target") and CheckInteractDistance("target", 4) then
			FollowUnit("target")
		end
	</Binding>
	<Binding name="HYDRA_FOLLOW_ME">
		if SlashCmdList.HYDRA_FOLLOWME then
			SlashCmdList.HYDRA_FOLLOWME()
		end
	</Binding>
	<Binding name="HYDRA_RELEASE_CORPSE">
		if SlashCmdList.HYDRA_CORPSE then
			SlashCmdList.HYDRA_CORPSE("r")
		end
	</Binding>
	<Binding name="HYDRA_ACCEPT_CORPSE">
		if SlashCmdList.HYDRA_CORPSE then
			SlashCmdList.HYDRA_CORPSE("a")
		end
	</Binding>
</Bindings>