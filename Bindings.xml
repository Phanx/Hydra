<Bindings>
	<Binding name="CLICK HydraAssistButton" header="HYDRA">
		-- click it!
	</Binding>
	<Binding name="HYDRA_REQUEST_ASSIST" header="HYDRA">
		if SlashCmdList.HYDRA_ASSIST then
			SlashCmdList.HYDRA_ASSIST()
		end
	</Binding>
	<Binding name="HYDRA_FOLLOW_TARGET">
		if UnitIsPlayer("target") and UnitIsFriend("player", "target") and CheckInteractDistance("target", 4) then
			FollowUnit("target")
		end
	</Binding>
	<Binding name="HYDRA_FOLLOW_ME">
		if SlashCmdList.HYDRA_FOLLOWME then
			SlashCmdList.HYDRA_FOLLOWME()
		end
	</Binding>
	<Binding name="HYDRA_RELEASE_CORPSE">
		if SlashCmdList.HYDRA_CORPSE then
			SlashCmdList.HYDRA_CORPSE("release")
		end
	</Binding>
	<Binding name="HYDRA_ACCEPT_CORPSE">
		if SlashCmdList.HYDRA_CORPSE then
			SlashCmdList.HYDRA_CORPSE("accept")
		end
	</Binding>
</Bindings>