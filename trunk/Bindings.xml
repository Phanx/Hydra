<Bindings>
	<Binding name="HYDRA_FOLLOW_TARGET" header="HYDRA" category="HYDRA">
		if UnitIsPlayer("target") and UnitIsFriend("player", "target") and CheckInteractDistance("target", 4) then
			FollowUnit("target")
		end
	</Binding>
	<Binding name="HYDRA_FOLLOW_ME" category="HYDRA">
		if SlashCmdList.HYDRA_FOLLOWME then
			SlashCmdList.HYDRA_FOLLOWME()
		end
	</Binding>
	<Binding name="HYDRA_RELEASE_CORPSE" category="HYDRA">
		if SlashCmdList.HYDRA_CORPSE then
			SlashCmdList.HYDRA_CORPSE("release")
		end
	</Binding>
	<Binding name="HYDRA_ACCEPT_CORPSE" category="HYDRA">
		if SlashCmdList.HYDRA_CORPSE then
			SlashCmdList.HYDRA_CORPSE("accept")
		end
	</Binding>
</Bindings>